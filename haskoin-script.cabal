    type:              exitcode-stdio-1.0
    main-is:           Main.hs
    build-depends:     base == 4.6.*, 
                       binary == 0.7.*, 
                       bytestring == 0.10.*, 
                       mtl == 2.1.*, 
                       haskoin-protocol == 0.1.*,
                       haskoin-crypto == 0.1.*,
                       haskoin-util == 0.1.*,
                       QuickCheck == 2.5.*, 
                       test-framework == 0.8.*, 
                       test-framework-quickcheck2 == 0.3.*, 
                       test-framework-hunit == 0.3.*, 
                       HUnit == 1.2.*
    hs-source-dirs:    testsuite, src
    ghc-options:       -O2

