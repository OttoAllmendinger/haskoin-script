name:                  haskoin-script
version:               0.1.1.0
synopsis:              Implementation of Bitcoin script parsing and evaluation
-- description:         
homepage:              http://github.com/plaprade/haskoin-script
license:               PublicDomain
license-file:          UNLICENSE
author:                Philippe Laprade
maintainer:            plaprade@gmail.com
category:              Bitcoin
build-type:            Simple
cabal-version:         >= 1.9.2

library
    exposed-modules:   Haskoin.Script,
                       Haskoin.Script.Arbitrary
    other-modules:     Haskoin.Script.Parser, 
                       Haskoin.Script.Evaluator 
    build-depends:     base == 4.6.*, 
                       binary == 0.7.*, 
                       bytestring == 0.10.*, 
                       mtl == 2.1.*, 
                       haskoin-protocol == 0.1.*,
                       haskoin-crypto == 0.1.*,
                       haskoin-util == 0.1.*,
                       QuickCheck == 2.5.*
    hs-source-dirs:    src
    ghc-options:       -O2

